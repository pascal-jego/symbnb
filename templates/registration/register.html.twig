{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="container">
		<div class="bg-light py-3 px-3">
			<h1 class="text-center">Inscrivez vous sur notre site !</h1>
			<hr>

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.firstName) }}
			{{ form_row(registrationForm.lastName) }}
			{{ form_row(registrationForm.picture) }}
			{{ form_row(registrationForm.introduction) }}
			{{ form_row(registrationForm.description) }}

			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
				
		

			{{ form_row(registrationForm.agreeTerms, { label: 'Accepter les conditions'}) }}


			<button type="submit" class="btn btn-success">Confirmez l'inscription</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
